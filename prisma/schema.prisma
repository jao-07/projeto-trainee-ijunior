// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int           @id @default(autoincrement())
  name              String
  email             String        @unique
  photo             String?
  password          String
  privileges        String
  musics            Music[]       @relation("UserMusic")
}

model Artist {
  id                Int           @id @default(autoincrement())
  name              String
  photo             String?
  streams           Int 
  musics            Music[]       @relation("MusicArtist")
}

model Music {
  id                Int           @id @default(autoincrement())
  name              String
  duration          Int
  genre             String
  album             String
  artists           Artist[]     @relation("MusicArtist")   
  users             User[]       @relation("UserMusic")
}